local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

local userInputService = game:GetService("UserInputService")

userInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end -- –ò–≥–Ω–æ—Ä–∏—Ä—É–µ–º, –µ—Å–ª–∏ —Å–æ–±—ã—Ç–∏–µ –±—ã–ª–æ –æ–±—Ä–∞–±–æ—Ç–∞–Ω–æ –∏–≥—Ä–æ–π

    if input.KeyCode == Enum.KeyCode.Semicolon then -- –ü—Ä–æ–≤–µ—Ä—è–µ–º, –±—ã–ª–∞ –ª–∏ –Ω–∞–∂–∞—Ç–∞ –∫–ª–∞–≤–∏—à–∞ ;
        local currentCFrame = humanoidRootPart.CFrame
        print("CFrame —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω: " .. tostring(currentCFrame))
        
        -- –ö–æ–ø–∏—Ä—É–µ–º CFrame –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞ (–µ—Å–ª–∏ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç—Å—è)
        if pcall(function()
            setclipboard(tostring(currentCFrame))
        end) then
            print("CFrame —É—Å–ø–µ—à–Ω–æ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞!")
        else
            print("–ù–µ —É–¥–∞–ª–æ—Å—å —Å–∫–æ–ø–∏—Ä–æ–≤–∞—Ç—å CFrame –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞.")
        end
    end
end)

--üé©üé©Send Notificationüé©üé©
local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")

-- –°–æ–∑–¥–∞–µ–º —Ñ—É–Ω–∫—Ü–∏—é –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –æ–ø–æ–≤–µ—â–µ–Ω–∏—è
local function sendNotification()
    local message = "Press ;"
    
    -- –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –≤—Å–µ–º –∏–≥—Ä–æ–∫–∞–º
    StarterGui:SetCore("SendNotification", {
        Title = "CFrame –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞",
        Text = message,
        Duration = 8 -- –ü—Ä–æ–¥–æ–ª–∂–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å —É–≤–µ–¥–æ–º–ª–µ–Ω–∏—è –≤ —Å–µ–∫—É–Ω–¥–∞—Ö
    })
end

-- –í—ã–∑—ã–≤–∞–µ–º —Ñ—É–Ω–∫—Ü–∏—é
sendNotification()
